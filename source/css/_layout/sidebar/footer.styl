.l_left footer.footer
  margin: 0.5rem var(--gap-max) 1rem

.social-wrap
  display: grid
  grid-gap: 0.25rem 0.25rem
  grid-template-columns: repeat(auto-fill, 32px)
  text-align: center
  .social
    line-height: 0
    display: inline-block
    padding: 6px
    border-radius: 32px
    filter: grayscale(100%)
    overflow: hidden
    background: transparent
    trans3: box-shadow background transform
    &:hover
      z-index: 1
      filter: unset
      background: var(--alpha100)
    img
      border-radius: 2px
      if hexo-config('style.prefers_theme') == 'auto'
        @media (prefers-color-scheme: dark)
          filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(288deg) brightness(102%) contrast(102%);
      if hexo-config('style.prefers_theme') == 'always'
        filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(288deg) brightness(102%) contrast(102%);

.large-social-wrap
  grid-gap: 0.25rem 0.25rem
  grid-template-columns: repeat(auto-fill, 32px)
  .large-social
    height: 1.2em
    line-height: 0
    display: block
    padding: 6px
    border-radius: 32px
    filter: grayscale(100%)
    overflow: hidden
    background: transparent
    trans3: box-shadow background transform
    &:hover
      z-index: 1
      filter: unset
      background: var(--alpha100)
    img
      display: inline-block
      height: 1.2em
      width: 1.2em
      border-radius: 2px
      if hexo-config('style.prefers_theme') == 'auto'
        @media (prefers-color-scheme: dark)
          filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(288deg) brightness(102%) contrast(102%);
      if hexo-config('style.prefers_theme') == 'always'
        filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(288deg) brightness(102%) contrast(102%);
    span
      display: inline-block
      height: 0.6em
      vertical-align: middle
      color: var(--text-p1)
      margin-left: 0.5em
